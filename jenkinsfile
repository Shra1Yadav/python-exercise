pipeline {
    agent {label 'master'}

    environment {
        IMAGE_NAME = 'shra1995yadav/python-project:declarative'
    }

    stages {

        stage('Git Checkout stage')
        {
            steps {
                git credentialsId: 'github-creds', url: 'https://github.com/Shra1Yadav/python-exercise.git'
            }
        }
        stage('Print User')
        {
            steps {
                sh 'whoami'
            }
        }
        stage('Docker Login')
        {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', passwordVariable: 'DOCKER_HUB_PASS', usernameVariable: 'DOCKER_HUB_USER')])
                {
                    sh '''
                    echo ">>> Docker Login"
                    echo "$DOCKER_HUB_PASS" | docker login -u "$DOCKER_HUB_USER" --password-stdin
                    '''
                }
            }
        }
        stage('Docker Build')
        {
            steps {
                sh 'docker build -t ${IMAGE_NAME} .'
            }
        }
        stage('Docker Push')
        {
            steps {
                sh "docker push ${IMAGE_NAME}"
            }
        }
        stage('Docker Deploy')
        {
            steps {
                sshagent(['13.232.101.203'])
                {
                    sh '''
                    cd /var/lib/jenkins/workspace/python-scripted-pipeline-job
                    pwd
                    ls -la
                    echo ">>> Docker compose up"
                    docker compose up -d
                    '''
                }
            }
        }
        
    }
}
